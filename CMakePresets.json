{
  "version": 5,
  "configurePresets": [
    {
      "name": "default",
      "hidden": true,
      "binaryDir": "${sourceDir}/build/${presetName}",
      "environment": {
        "DEBUG_LAUNCH_OPTIONS": "-insecure -insert_search_path \"${sourceDir}/mod\" -window -w 800 -h 600 -novid -console"
      }
    },
    {
      "name": "x64",
      "hidden": true,
      "inherits": "default",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      }
    },
    {
      "name": "x86",
      "hidden": true,
      "inherits": "default",
      "architecture": {
        "value": "x86",
        "strategy": "external"
      }
    },
    {
      "name": "Release",
      "hidden": true,
      "cacheVariables": { "CMAKE_BUILD_TYPE": "Release" }
    },
    {
      "name": "Debug",
      "hidden": true,
      "cacheVariables": { "CMAKE_BUILD_TYPE": "Debug" }
    },
    {
      "name": "x64-Debug",
      "inherits": [ "x64", "Debug" ]
    },
    {
      "name": "x64-Release",
      "inherits": [ "x64", "Release" ]
    },
    {
      "name": "x86-Debug",
      "inherits": [ "x86", "Debug" ]
    },
    {
      "name": "x86-Release",
      "inherits": [ "x86", "Release" ]
    }
  ]
}
